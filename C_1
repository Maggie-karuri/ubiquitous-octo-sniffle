#include <stdio.h>

int main() {
    double number;
    printf("enter number: ");
    scanf("%d", &number);
    if(number > 0){
        printf("The number is positive");
    }
    else if(number == 0){
            printf("The number is 0");
    }
    else if (number < 0){
        printf("The number is negative");
    }
    return 0;
}
